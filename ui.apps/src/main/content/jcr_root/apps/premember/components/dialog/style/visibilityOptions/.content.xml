<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Visibility options"
          sling:resourceType="granite/ui/components/coral/foundation/container"
          margin="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
        <columns
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <showOnToken
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Show on token"
                                fieldDescription="If token provided and its value is resolved to FALSE this section will be hidden."
                                name="./showOnToken"/>
                        <suppressOnToken
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Suppress on token"
                                fieldDescription="If token provided and its value is resolved to TRUE this section will be hidden."
                                name="./suppressOnToken"/>
                        <specificTokenValue
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="When token value matches"
                                fieldDescription="If value provided here matches with one of the visibility tokens this component will be shown or suppressed."
                                name="./specificTokenValue"/>
                    </items>
                </column>
            </items>
        </columns>
    </items>
</jcr:root>
